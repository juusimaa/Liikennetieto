<Window x:Class="Liikennetieto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Liikennetieto"
        xmlns:mapviews="clr-namespace:Liikennetieto.MapViews"
        mc:Ignorable="d"
        x:Name="This"
        Title="Liikennetieto" Height="350" Width="525"
        d:DataContext="{d:DesignInstance {x:Type local:MainWindowModel}}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Parking station:" FontSize="14" Margin="5"/>

        <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding Stations}" DisplayMemberPath="Name" 
                  SelectedItem="{Binding SelectedStation}" Margin="5" FontSize="14"/>

        <mapviews:MapView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" DataContext="{Binding MapViewModel}"/>    

    </Grid>
</Window>
